---

parameter_defaults:
  CloudName: {{ tripleo_job_address }}
  ControlPlaneStaticRoutes: []
  Debug: true
  DeploymentUser: stack
  DnsServers:
    - 208.67.222.222
    - 8.8.8.8
  DockerInsecureRegistryAddress:
    - {{ tripleo_job_address }}:8787
  NeutronPublicInterface: eth1
  NeutronDnsDomain: localdomain
  NeutronBridgeMappings: datacentre:br-ctlplane
  NeutronPhysicalBridge: br-ctlplane
  StandaloneEnableRoutedNetworks: false
  StandaloneHomeDir: {{ ansible_env.HOME }}
  StandaloneLocalMtu: 1500
  NovaComputeLibvirtType: kvm

  SELinuxMode: permissive
  ContainerImagePrepareDebug: true
  ContainerCli: podman
  PythonInterpreter: {{ ansible_python_interpreter }}
  NtpServer: {{ tripleo_ntp_servers | to_yaml }}
